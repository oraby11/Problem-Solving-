#include <iostream>
using namespace std;

int main() {
    long long n, k;
    cin >> n >> k;

    // حساب عدد الأعداد الفردية
    long long odd_count = (n + 1) / 2;

    if (k <= odd_count) {
        // إذا كان k يقع ضمن الأعداد الفردية
        cout << (2 * k - 1) << endl;
    } else {
        // إذا كان k يقع ضمن الأعداد الزوجية
        cout << 2 * (k - odd_count) << endl;
    }

    return 0;
}
